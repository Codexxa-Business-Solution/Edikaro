<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="370dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <FrameLayout
        android:id="@+id/fl_logo"
        android:layout_width="60dp"
        android:layout_height="72dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.847"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.015">


        <LinearLayout
            android:id="@+id/linearLogo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.953"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.016">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="100dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.04"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">


                <ImageView
                    android:id="@+id/iv_logo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/logo" />
            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </FrameLayout>

    <!-- <TextView
            android:id="@+id/textView"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/rounded"
            android:text="CODEXXA BUSSINESS SOLUTION"
            android:textAlignment="center"
            android:textColor="#fbb710"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent">

        </TextView>-->




    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="408dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal|bottom"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.99">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="bottom|center_horizontal"
            android:background="#01569a"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="8sp"
            android:paddingBottom="0sp">

            <FrameLayout
                android:id="@+id/fl_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/linearEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="3sp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivEmail"
                        android:layout_width="10sp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_email"
                        app:tint="#FFF" />

                    <TextView
                        android:id="@+id/tv_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2sp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="i@gmail.com"
                        android:textColor="@color/white"
                        android:textSize="9sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_email_close"
                    android:layout_width="5sp"
                    android:layout_height="5sp"
                    android:layout_gravity="top|left|center_vertical|center_horizontal|center|start"
                    android:elevation="1dp"
                    android:src="@drawable/instagram"
                    android:visibility="gone" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/fl_website"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3sp"
                android:layout_marginEnd="3sp"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/linearWebsite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_website"
                        android:layout_width="10sp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:src="@drawable/facebook"
                        app:tint="#FFF" />

                    <TextView
                        android:id="@+id/tv_website"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2sp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="www..com"
                        android:textColor="@color/white"
                        android:textSize="9sp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_website_close"
                    android:layout_width="5sp"
                    android:layout_height="5sp"
                    android:layout_gravity="top|left|center_vertical|center_horizontal|center|start"
                    android:elevation="1dp"
                    android:src="@drawable/ic_email"
                    android:visibility="gone" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/fl_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/linearPhone"
                    android:layout_width="112dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/iv_phone"
                        android:layout_width="10sp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginStart="3sp"
                        android:src="@drawable/ic_email"
                        app:tint="#FFF" />

                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2sp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="9999999999"
                        android:textColor="@color/white"
                        android:textSize="9sp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_phone_close"
                    android:layout_width="5sp"
                    android:layout_height="5sp"
                    android:layout_gravity="top|left|center_vertical|center_horizontal|center|start"
                    android:elevation="1dp"
                    android:src="@drawable/ic_instagram"
                    android:visibility="gone" />

            </FrameLayout>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/fl_address"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#d71b5f"
            android:paddingTop="5sp">

            <LinearLayout
                android:id="@+id/linearAddress"
                android:layout_width="211dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/iv_address"
                    android:layout_width="13dp"
                    android:layout_height="15dp"
                    android:layout_gravity="top"
                    android:layout_marginStart="0sp"
                    android:src="@drawable/ic_address"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="201dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2sp"
                    android:ellipsize="end"
                    android:gravity="center|left"
                    android:maxLines="1"
                    android:text="84 Vivekananda Park, Sardar Nagar"
                    android:textColor="@color/white"
                    android:textSize="9sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_address_close"
                android:layout_width="5sp"
                android:layout_height="5sp"
                android:layout_gravity="top|left|center_vertical|center_horizontal|center|start"
                android:elevation="1dp"
                android:src="@drawable/ic_instagram"
                android:visibility="gone" />

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="273dp"
        android:layout_height="35dp"

        android:layout_gravity="bottom|center_horizontal"
        android:background="@drawable/rounded_border"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="2sp"
        android:paddingBottom="2sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.865">

        <FrameLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="3sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2sp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="CODEXXA BUSSINESS SOLUTION"
                    android:textColor="#fbb710"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>


        </FrameLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>



